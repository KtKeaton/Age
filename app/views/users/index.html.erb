<h1>人員資料列表</h1>
<ul>
  <% @users.each do |user| %>
    <li>
      姓名: <%= user.name %>
      生日: <%= birthday(user.birthday) %>
      年齡: <%= user.age %>
        <%= link_to "詳細" , user_path(user) %>
        <%= link_to "編輯" , edit_user_path(user) %>
        <%= link_to "刪除" , user_path(user), method: :delete, data:{ confirm: "確定嗎？" } %>
    </li>
    <% end %>
</ul>

<%= link_to "新增人員" , new_user_path %>